{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": false,
    "declaration": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "pretty": true,
    "outDir": "./lib",
    "lib": ["es2017"],
    "removeComments": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "examples", "test"]
}
